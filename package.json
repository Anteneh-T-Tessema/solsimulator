{
  "name": "solana-phone-simulator",
  "version": "0.1.0",
  "description": "A development tool for testing Solana mobile applications without requiring physical Saga hardware",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "solana-sim": "dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "clean": "rm -rf dist",
    "prepare": "npm run build"
  },
  "keywords": [
    "solana",
    "mobile",
    "simulator",
    "saga",
    "blockchain",
    "development",
    "testing"
  ],
  "author": "Solana Phone Simulator Contributors",
  "license": "MIT",
  "dependencies": {
    "@solana/web3.js": "^1.87.6",
    "@solana/wallet-adapter-base": "^0.9.23",
    "commander": "^11.1.0",
    "bip39": "^3.1.0",
    "ed25519-hd-key": "^1.3.0",
    "tweetnacl": "^1.0.3",
    "adb-ts": "^1.0.0",
    "ws": "^8.14.2",
    "express": "^4.18.2",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/jest": "^29.5.8",
    "@types/ws": "^8.5.9",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/solana-mobile/phone-simulator.git"
  },
  "bugs": {
    "url": "https://github.com/solana-mobile/phone-simulator/issues"
  },
  "homepage": "https://github.com/solana-mobile/phone-simulator#readme"
}